<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="rg_confirm_view_form_384" model="ir.ui.view">
            <field name="name">rg.confirm.view_form</field>
            <field name="model">rg.confirm</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="确认">
    <field name="info" readonly="1"/>
    <group>
        <group>
            <field name="rg_allowance_type"/>
        </group>
        <group>
           <field name="rg_attendance_id" attrs="{'invisible': [('rg_allowance_type', '!=', 'attendance_allowance')]}"/>
            <field name="rg_vacation_id" attrs="{'invisible': [('rg_allowance_type', '!=', 'transportation_allowance')]}"/>
        </group>
    </group>
    <field name="postgraduate_ids">
        <tree editable="bottom">
            <field name="grade"/>
            <field name="postgraduate_type"/>
            <field name="name"/>
            <field name="gender"/>
            <field name="mobile"/>
        </tree>
    </field>
    <footer>
        <button name="execute_with_parm" string="确定" type="object" class="oe_highlight"/>
        <button string="放弃" class="oe_link" special="cancel"/>
    </footer>
</form>
            </field>
        </record>

    </data>
</openerp>